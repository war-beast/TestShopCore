@model IEnumerable<Product>

@foreach (var product in Model)
{
    <!-- product -->
    <div class="col-sm-4 col-xs-6">
        <div class="product">
            <div class="product-img">
                <img src="@product.Photo" alt="">
            </div>
            <div class="product-body">
                <p class="product-category">@product.Category.Name</p>
                <h3 class="product-name"><a href="~/Home/Product/@product.Id">@product.Name</a></h3>
                <h4 class="product-price">
                    <span>@product.Price</span> ₽ <del class="product-old-price">
                        @{
                            var dif = product.Price * 1.1M;
                            @dif;
                        } ₽
                    </del>
                </h4>
                <div class="product-rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>&nbsp;
                    <i>(@Html.Raw(product.Rating))</i>
                </div>
                <div class="product-btns">
                    <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">добавить в список желаний</span></button>
                    <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">добавить в сравнения</span></button>
                    <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">предпросмотр</span></button>
                </div>
            </div>
            <div class="add-to-cart"> 
                @{ var price = product.Price;
                    var name = product.Name;
                    var id = product.Id;
                    var photo = product.Photo;}
                <button class="add-to-cart-btn" ng-click="addItem({Id: @id, Name: '@name', Price: '@price', Count: 1, Photo: '@photo'})"><i class="fa fa-shopping-cart"></i> добавить в корзину</button>
            </div>
        </div>
    </div>
    <!-- /product -->
}
