@model Order

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">@Html.DisplayNameFor(model => model.Date): </div>
        <div class="col-sm-8">@Html.DisplayFor(model => model.Date)</div>
    </div>
    <div class="row">
        <div class="col-sm-4">@Html.DisplayNameFor(model => model.State): </div>
        <div class="col-sm-8">@Html.DisplayFor(model => model.State)</div>
    </div>
</div>
<div class="card-block">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Товар
                </th>
                <th>
                    Кол-во
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <th>
                    @item.Product.Name
                </th>
                <td>
                    @item.Count
                </td>
            </tr>
        }

    </table>
    <div class="pull-right">
        @Html.DisplayNameFor(model => model.Sum): @Html.DisplayFor(model => model.Sum)
    </div>
</div>